<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView android:id="@+id/txt_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="昨天 下午 10:37"
            android:background="@drawable/radiobutton_background_checked"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/headImage_other"
	        android:layout_width="50dp"
	        android:scaleType="fitXY"
	        android:layout_height="50dp"
	        android:contentDescription="@null"
	        android:background="@android:color/transparent"
	        android:src="@drawable/default2"/>
        <ImageButton android:id="@+id/headImage_myself"
	        android:layout_width="50dp"
	        android:scaleType="fitXY"
	        android:layout_height="50dp"
	        android:layout_alignParentRight="true"
	        android:contentDescription="@null"
	        android:background="@android:color/transparent"
	        android:src="@drawable/default_head"/>
        <LinearLayout android:layout_width="match_parent"
            android:id="@+id/msg_container"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/headImage_myself"
            android:layout_toRightOf="@id/headImage_other">
            <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="hello"
	            android:textColor="@color/black"
	            android:gravity="center_vertical"
	            android:minHeight="36dp"
	            android:textSize="16sp"
	            android:id="@+id/txt_msg"/>
            <ImageView android:id="@+id/imgView_picMsg"
	            android:contentDescription="@null"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:minHeight="50dp"
	            android:minWidth="50dp"
	            android:clickable="true"
	            android:scaleType="fitCenter"
	            android:background="@color/transparent"
	            android:src="@drawable/sy_l"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
