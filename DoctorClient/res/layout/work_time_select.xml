            <RadioButton android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@id/rd_pm"
                android:padding="0dp"/>
            <RadioButton android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@id/rd_nt"
                android:padding="0dp"/>
        </RadioGroup>
	</LinearLayout>
	
</LinearLayout>
