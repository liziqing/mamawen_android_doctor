<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView android:id="@id/headImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        android:background="@drawable/default2"/>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:gravity="center_vertical"
	    android:paddingLeft="10dp"
	    android:paddingRight="5dp"
	    android:layout_gravity="center_vertical"
	    android:orientation="vertical">
	    <RelativeLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <TextView android:id="@+id/txt_TimeOfLastMsg"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:singleLine="true"
	        	android:textColor="@color/white"
	        	android:layout_centerVertical="true"
	        	android:gravity="right|center_vertical"
	     		android:drawableLeft="@drawable/alarm_white"
	        	android:layout_alignParentRight="true"
	        	android:text="下午4:30"
	        	android:textSize="12sp"/>
	    	<TextView android:id="@id/name"
	    	    android:text="雨橙宝贝"
	    	    android:textStyle="bold"
	    	    android:singleLine="true"
	    	    android:layout_centerVertical="true"
	    	    android:textColor="@color/white"
	    	    android:layout_toLeftOf="@id/txt_TimeOfLastMsg"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:gravity="left"
	        	android:textSize="18sp"/>
	    </RelativeLayout>
	    <RelativeLayout android:layout_width="match_parent"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content">
	    	<TextView android:id="@+id/txt_unreadFlag"
	        	android:layout_width="22dp"
	        	android:layout_height="22dp"
	        	android:gravity="center"
	        	android:visibility="gone"
	      		android:layout_centerVertical="true"
	        	android:layout_alignParentRight="true"
	        	android:text="99+"
	        	android:layout_marginLeft="10dp"
	        	android:textColor="@color/white"
	        	android:background="@drawable/circle"
	        	android:singleLine="true"
	        	android:textSize="12sp"/>
	    	<TextView android:id="@+id/lastMsg"
	    	    android:layout_toLeftOf="@id/txt_unreadFlag"
	        	android:gravity="left"
	        	android:layout_marginTop="5dp"
	        	android:layout_centerVertical="true"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:ellipsize="end"
	        	android:textColor="@color/white"
	        	android:singleLine="true"
	        	android:text="阿斯顿飞规划局看了阿斯顿飞规划局看了阿斯顿飞规划局看了"
	        	android:textSize="14sp"/>
	    </RelativeLayout>
	</LinearLayout>
	
</LinearLayout>
