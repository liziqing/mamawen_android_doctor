<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <!-- <include layout="@layout/seach_head"/> -->
    <Button android:background="@android:color/transparent"
        android:drawableLeft="@drawable/add_p"
        android:id="@+id/btn_new_friends"
        android:text="新的患者"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@color/white_half"/>
	<Button android:background="@android:color/transparent"
        android:drawableLeft="@drawable/label"
        android:id="@+id/btn_tag"
        android:text="标签"
        android:textColor="@color/white"
        android:drawingCacheQuality="low"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<TextView android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@color/white_half"/>
	<Button android:background="@android:color/transparent"
        android:drawableLeft="@drawable/doctor_l"
        android:id="@+id/btn_helper"
        android:text="医疗助理"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
